<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policymap [
<!ELEMENT policymap (policy)*>
<!ATTLIST policymap xmlns CDATA #FIXED "">
<!ELEMENT policy EMPTY>
<!ATTLIST policy xmlns CDATA #FIXED "">
<!ATTLIST policy domain NMTOKEN #REQUIRED>
<!ATTLIST policy name NMTOKEN #IMPLIED>
<!ATTLIST policy pattern CDATA #IMPLIED>
<!ATTLIST policy rights NMTOKEN #IMPLIED>
<!ATTLIST policy stealth NMTOKEN #IMPLIED>
<!ATTLIST policy value CDATA #IMPLIED>
]>

<policymap>
  <!-- Full permissions policy -->
  
  <!-- Enable all resource limits -->
  <policy domain="resource" name="disk" value="-1"/>
  <policy domain="resource" name="file" value="-1"/>
  <policy domain="resource" name="map" value="-1"/>
  <policy domain="resource" name="memory" value="-1"/>
  <policy domain="resource" name="width" value="-1"/>
  <policy domain="resource" name="height" value="-1"/>
  <policy domain="resource" name="area" value="-1"/>
  <policy domain="resource" name="thread" value="-1"/>
  <policy domain="resource" name="time" value="-1"/>
  <policy domain="resource" name="list-length" value="-1"/>

  <!-- Enable all delegates -->
  <policy domain="delegate" rights="all" pattern="*"/>

  <!-- Enable unrestricted filters -->
  <policy domain="filter" rights="all" pattern="*"/>

  <!-- Allow all coders -->
  <policy domain="coder" rights="read|write" pattern="*"/>

  <!-- Enable unrestricted paths -->
  <policy domain="path" rights="read|write|execute" pattern="*"/>

  <!-- Enable all modules -->
  <policy domain="module" rights="all" pattern="*"/>

  <!-- Disable security restrictions -->
  <policy domain="security" name="shred" value="0"/>
  <policy domain="system" name="memory-map" value="all"/>
</policymap>
